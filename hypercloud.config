#!/bin/bash

# jq / kustomize 

#------------------------------------------------------------------
# ex : HPCD_MODE=multi or single
# ex : HPCD_SINGLE_OPERATOR_VERSION=5.0.10.0
# ex : HPCD_MULTI_OPERATOR_VERSION=5.0.10.0
# ex : HPCD_MULTI_AGENT_VERSION=5.0.10.0
# ex : HPCD_API_SERVER_VERSION=5.0.10.0
# ex : HPCD_TIMESCALEDB_VERSION=5.0.0.0
# ex : HPCD_MULTI_AGENT_VERSION=5.0.10.0
# ex : REGISTRY=192.168.6.171:5000                               ## do not modify if you don't use private repo
# ex : KUBECTL_TIMEOUT=300
# ex : KAFKA_ENABLED=true
# ex : API_SERVER_LOG_LEVEL=INFO                                 ## TRACE, DEBUG, INFO, WARN, ERROR, FATAL
# ex : SINGLE_OPERATOR_LOG_LEVEL=INFO                            ## error, info, debug
# ex : MULTI_OPERATOR_LOG_LEVEL=INFO                             ## error, info, debug
# ex : TIMESCALEDB_LOG_LEVEL=INFO                                   ## DEBUG5, ..., DEBUG1, INFO, NOTICE, WARNING, ERROR, LOG, FATAL, PANIC

# ex : MAIN_MASTER_IP=192.168.6.171
# ex : SUB_MASTER_IP=("192.168.6.172" "192.168.6.173")           ########################
# ex : MASTER_NODE_ROOT_USER=("root1" "root2")                   ## order must be same ##
# ex : MASTER_NODE_ROOT_PASSWORD=("passwd111" "passwd222")       ########################

# ex : CUSTOM_DOMAIN=tmaxcloud.org                               ## domain for hypercloud
# ex : CONSOLE_SUBDOMAIN=tmaxcloud-console                       ## subdomain for hypercloud console

# ex : INVITATION_TOKEN_EXPIRED_DATE=7days                       ## 1miniutes, 1hours, ...
# ex : TIMESCALEDB_XXX_CHUNK_INTERVAL=7days                      ## 1days, 1months, 1years, ...
# ex : TIMESCALEDB_XXX_RETENTION_POLICY=7days                    ## 1days, 1months, 1years, ...
#------------------------------------------------------------------
# common
HPCD_MODE=multi
HPCD_SINGLE_OPERATOR_VERSION=5.0.34.0
HPCD_MULTI_OPERATOR_VERSION=5.0.34.0
HPCD_MULTI_AGENT_VERSION=5.0.25.14
HPCD_API_SERVER_VERSION=5.0.34.0
HPCD_TIMESCALEDB_VERSION=5.0.0.0

REGISTRY={REGISTRY}

KUBECTL_TIMEOUT=3600
KAFKA_ENABLED=false

API_SERVER_LOG_LEVEL=INFO
SINGLE_OPERATOR_LOG_LEVEL=info
MULTI_OPERATOR_LOG_LEVEL=info
TIMESCALEDB_LOG_LEVEL=WARNING

MAIN_MASTER_IP={MAIN_MASTER_IP}
SUB_MASTER_IP={SUB_MASTER_IP}
MASTER_NODE_ROOT_USER={MASTER_NODE_ROOT_USER}
MASTER_NODE_ROOT_PASSWORD={MASTER_NODE_ROOT_PASSWORD}

CUSTOM_DOMAIN=domain.com
CONSOLE_SUBDOMAIN=console-subdomain

INVITATION_TOKEN_EXPIRED_DATE=7days
TIMESCALEDB_AUDIT_CHUNK_INTERVAL=7days
TIMESCALEDB_AUDIT_RETENTION_POLICY=1years
TIMESCALEDB_EVENT_CHUNK_INTERVAL=1days
TIMESCALEDB_EVENT_RETENTION_POLICY=1months
TIMESCALEDB_METERING_HOUR_CHUNK_INTERVAL=1days
TIMESCALEDB_METERING_HOUR_RETENTION_POLICY=1months
TIMESCALEDB_METERING_DAY_CHUNK_INTERVAL=1months
TIMESCALEDB_METERING_DAY_RETENTION_POLICY=1years
TIMESCALEDB_METERING_MONTH_CHUNK_INTERVAL=1years
TIMESCALEDB_METERING_MONTH_RETENTION_POLICY=1years
TIMESCALEDB_METERING_YEAR_CHUNK_INTERVAL=1years
TIMESCALEDB_METERING_YEAR_RETENTION_POLICY=10years